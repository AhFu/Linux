#Color code
normal='\033[0m'
red='\033[0;31m'
green='\033[0;32m'
organge='\033[0;33m'
blue='\033[0;34m'
purple='\033[0;35m'
cyan='\033[0;36m'
lightgrey='\033[0;37m'
darkgrey='\033[1;30m'
lightred='\033[1;31m'
lightgreen='\033[1;32m'
yellow='\033[1;33m'
lightbluee='\033[1;34m'
lightpurple='\033[1;35m'
lightcyan='\033[1;36m'
white='\033[1;37m'

# Aliases
alias cl=clear
alias grep='grep --color=auto -iP'


# microk8s
if [[ $(snap list |grep 'microk8s') ]]
then
alias mkubectl='microk8s kubectl'
fi
